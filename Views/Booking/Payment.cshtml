@{
    ViewBag.Title = "Airline Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form ng-controller="booking.payment.controller" data-ng-init="Init()" class="form-horizontal">
    <section class="container body-content">
        <div class="wizard">
            <a><span class="badge">1</span> Search</a>
            <a><span class="badge">2</span> Flights</a>
            <a><span class="badge">3</span> Confirmation</a>
            <a><span class="badge">4</span> Passengers</a>
            <a class="current"><span class="badge badge-inverse">5</span> Payment</a>
        </div>
        <br />
        <hr />
        <div class="container">
            <div class="col-sm-2"></div>
            <div><h3>Booking Information</h3></div>
            <hr />
            <label class="col-sm-2">Arrive:</label>
            <div class="col-sm-6">
                <input disabled readonly="readonly" class="form-control text-uppercase" type="text" ng-model="Model.BookingCode" name="To">
            </div>
            <br />
            <br />
            <label class="col-sm-2">Date:</label>
            <div class="col-sm-6">
                <input disabled readonly="readonly" class="form-control text-uppercase" type="text" ng-model="Model.TimeReservation" name="Date">
            </div>
            <br />
            <br /><label class="col-sm-2">Price:</label>
            <div class="col-sm-6">
                <input disabled readonly="readonly" class="form-control text-uppercase" type="text" ng-model="Model.TotalAmount|number" name="Price">
            </div>
            <br />
            <hr />
        </div>
        <div class="date_btn">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <input class="myButtonPayment" type="submit" value="Pay" ng-click="Payment()">
            </div>
        </div>
    </section>
</form>
@section Scripts {
    <script>
        var _flyingFrom =@Html.Raw(Json.Encode(ViewData["FLYINGFROM"]));

    </script>
    @Scripts.Render("~/Scripts/AirlineReservation/Controller/booking.payment.controller.js")
}